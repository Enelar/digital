<div class='callus-widget'>
  <div class='relative'>
          <div>
            <div class="center">
              <div>
                <div class="pulse-emit">
                </div>
              </div>
            </div>
          </div>
          
          <div>
            <div class="center">
              <div>
                <div class="aura-container">
                </div>
              </div>
            </div>
          </div>

          <div class="center">
            <div>
              <div class='phone-circle'>
                <span>
                  <span class='phone glyphicon glyphicon-earphone'></span>
                </span>
              </div>
            </div>
          </div>
  </div>
</div>

<link href="css/callus-widget.less" rel="stylesheet" media="screen">

<%
var ignite;
this.DeferCascade(function()
{
  if (phoxy.Config()["ip"] == "213.21.7.6" || location.host == "callus.demo.scladless.com")
    this.first().css('opacity', 1);
  else
    return;

  this.first()
    .find('.phone')
    .click(function()
    {
      ignite.click();
    })
})
%>

<%= this.DeferRender('widgets/callus/ignite', {}, function()
{
  ignite = this.first();
}) %>

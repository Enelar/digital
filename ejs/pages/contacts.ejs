<div data-mark='contacts'>
  <ul class="no_ul_bullets">
    <li data-mark='contact-address'>
      <span class='glyphicon glyphicon-map-marker' title="Карта здесь!"></span>        
      <b>
        <p>г. Санкт-Петербург,</p>
        <p><big>Улица Ефимова, 4а</big></p>
      </b>
    </li>
    <li data-mark='contact-phone'>
      <span class='glyphicon glyphicon-earphone'></span>
      <b>
        <p><a data-mark='phone'>+7 (812) 499 49 55</a> (мобильный)</p>
        <font color='darkslategray'>Многоканальный</font>
      </b>
    </li>
    <li data-mark='contact-work-hours'>
      <span class='glyphicon glyphicon-time'></span>
      <b>
        <p>Ежедневно с 11:00 до 20:00</p>
        <p>Доставка с 10:00 до 22:00</p>
      </b>
    </li>
    <li data-mark='contact-roadmap'>
      <span class='glyphicon glyphicon-road'></span>
      <b style='font-size: 2em'>Как добраться</b><br>
      <b>5 минут от м. Сенная</b>
    </li>
    <li data-mark='contact-other'>
      <span class='glyphicon glyphicon-envelope'></span>
      <b>
        <a href='mailto:info@digital812.ru' class='hipster'>info@digital.ru</a><br>
        <a href="https://vk.com/digital812spb" class='hipster' target="_blank">Вконтакте</a><br>
        <a href="https://twitter.com/digital812" class='hipster' target="_blank">Twitter</a>
      </b>
    </li>
  </ul>
</div>

<%
phoxy.Defer(function()
{
  var base = $('#content [data-mark="contacts"]');
  
  var map = base.find('li[data-mark="contact-address"]')
    .hover
    (
      function()
      {
       $(this).find('span').tooltip('show');
      },
      function()
      {
        $(this).find('span').tooltip('hide');
      }
    )
    .find('span').tooltip('show');
    
  MakeModal("#modal-map", map);
  MakeModal("#modal-roadmap", base.find('li[data-mark="contact-roadmap"]'));
  
  base.find('span.glyphicon').each(function()
  {
    InsertParent(this, $('<div \>').attr('data-mark', 'icon'));
  });
  
  CorrectPhonesURL();
}
);
%>

<%=
phoxy.DeferRender(
  'pages/modal', 
  {
    id: "modal-map",
    title: "Контакты сервис центра",
    body: phoxy.DeferRender('pages/map', {})
  })
%>

<%=
phoxy.DeferRender(
  'pages/modal', 
  {
    id: "modal-roadmap",
    title: "Как добраться",
    body: phoxy.DeferRender('pages/roadmap', {})
  })
%>
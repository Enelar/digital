<% 
did = phoxy.GenerateUniqueID()
if (typeof(available) == 'undefined')
  available = 't';
%>
<button id='<%= did %>' role='buy' class='btn btn-danger' value='<%= id %>'>
<%= available == 't' ? 'Купить' : 'Заказать' %></button>

<%
if (typeof(stayhere) == 'undefined')
  stayhere = false;
phoxy.Defer(function()
{
  var that = $("#" + did);
  
  function Bind(that)
  {
    $(that).unbind();
    $(that)
      .click(function()
      {
        window.gevents.prebuy._trackEvent('open_stone', id);
        $(that)
          .unbind()
          .click(function()
          {
            $(that)
              .next()
              .popover('destroy')
              .remove();
            Bind(that);
          });

        phoxy.Fancy('buy/stone', {id: id, stayhere: stayhere}, function(html)
        {
          $(that)
            .after(
              $('<div />')
              .popover(
              {
                html: true,
                title: "Способ покупки",
                content: html
              })
            );
          $(that).next().popover('show');
        });
      });
  }
  
  Bind(that);
});
%>